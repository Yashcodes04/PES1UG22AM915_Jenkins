pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                userRemoteConfigs: [[url: 'https://github.com/Yashcodes04/PES1UG22AM915_Jenkins.git']]])
            }
        }
        stage('Build') {
            steps {
                // Assuming 'PES1UG22AM915-1' is another job or task you want to build
                // Ensure this job is defined in Jenkins if this line is to be used
                build 'PES1UG22AM915-1'

                // Compile the program
                sh 'g++ your_program.cpp -o output'
            }
        }
        stage('Test') {
            steps {
                // Execute the program
                sh './output'
            }
        }
        stage('Deploy') {
            steps {
                // Deployment step, simplified for demonstration
                echo 'Deploying...'
            }
        }
    }
    post {
        failure {
            // This will mark the build as failed if any of the stages fail
            error 'Pipeline failed'
        }
    }
}
